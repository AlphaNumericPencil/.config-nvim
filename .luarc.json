{
  "$schema": "https://raw.githubusercontent.com/LuaLS/lua-language-server/master/schema/luarc.json",
  "diagnostics": {
    "globals": ["vim"],
    "disable": [
      "unused-local",
      "unused-function",
      "unused-vararg"
    ],
    "unusedLocalExclude": ["_*"]
  },
  "workspace": {
    "library": [
      "${3rd}/luv/library",
      "${3rd}/busted/library",
      "${3rd}/luassert/library",
      "${3rd}/luaunit/library",
      "${3rd}/plenary.nvim",
      "${3rd}/nvim-treesitter",
      "${3rd}/telescope.nvim",
      "${3rd}/lazy.nvim"
    ],
    "ignoreSubmodules": false,
    "ignoreDir": [".git"],
    "maxPreload": 2000,
    "preloadFileSize": 1000
  },
  "completion": {
    "autoRequire": true,
    "showWord": "Disable",
    "keywordSnippet": "Disable"
  },
  "hint": {
    "enable": true,
    "arrayIndex": "Disable",
    "paramName": "All",
    "paramType": true,
    "setType": true
  },
  "type": {
    "castNumberToInteger": true
  }
}
